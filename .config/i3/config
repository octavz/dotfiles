mode "window" {
    # use window title, but no border
    bindsym $mod+q [class="^.*"] border normal 0
    bindsym $mod+a border normal 0
    # use no window title and a thick border
    bindsym $mod+w [class="^.*"] border pixel 2
    bindsym $mod+r border pixel 2
    # use neither window title nor border
    bindsym $mod+f [class="^.*"] border none
    bindsym $mod+s border none
    # use both window title and border
    bindsym $mod+p [class="^.*"] border pixel 1
    bindsym $mod+t border pixel 1
    #return
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+x mode "default"
}

mode "moveit" {
    bindsym Up move up 20px
    bindsym button4 nop
    bindsym button4 move up 20px
    bindsym Left move left 20px
    bindsym Down move down 20px
    bindsym button5 nop
    bindsym button5 move down 20px
    bindsym Right move right 20px
    bindsym $mod+m mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+m focus floating; mode "moveit"
